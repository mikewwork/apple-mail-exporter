{
  "name": "apple-mail-exporter",
  "version": "1.0.0",
  "description": "Export Apple Mail emails to PDF",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:mac:all": "electron-builder --mac --x64 --arm64",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build": "npm run build:mac:all",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "apple-mail",
    "pdf",
    "export"
  ],
  "author": "Michael Wallwork",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "csv-writer": "^1.6.0",
    "email-regex-safe": "^4.0.0",
    "email-reply-parser": "^2.0.1",
    "eml-parser": "^2.0.4",
    "fs-extra": "^11.1.1",
    "mailparser": "^3.7.4",
    "path": "^0.12.7",
    "puppeteer": "^24.11.2"
  },
  "build": {
    "appId": "com.applemail.exporter",
    "productName": "Apple Mail Exporter",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
